# ===========================================
# BIZVERSE SAAS - FLYING VENTURE SYSTEM
# Environment Configuration Template
# ===========================================

# ============================================
# DATABASE CONFIGURATION
# ============================================
# PostgreSQL connection string
# Format: postgresql://username:password@host:port/database_name
DATABASE_URL=postgresql://bizverse_user:your_password_here@localhost:5432/bizverse_db

# ============================================
# JWT & SECURITY SECRETS
# ============================================
# IMPORTANT: Generate strong random secrets for production
# Use: openssl rand -hex 32

# JWT secret for access tokens (DO NOT CHANGE in production - will invalidate existing sessions)
JWT_SECRET=your_jwt_secret_here_min_32_chars

# Refresh token secret
REFRESH_SECRET=your_refresh_secret_here_min_32_chars

# Admin JWT secret for platform admin access
ADMIN_JWT_SECRET=your_admin_jwt_secret_here_min_32_chars

# Session secret for Express sessions
SESSION_SECRET=your_session_secret_here_min_32_chars

# ============================================
# APPLICATION SETTINGS
# ============================================
# Environment: development | production | staging
NODE_ENV=development

# Port for the application (default: 5000)
PORT=5000

# Application URL (used for payment callbacks, email links)
APP_URL=http://localhost:5000

# ============================================
# EMAIL SERVICE - RESEND API
# ============================================
# Resend API Key - Get from: https://resend.com/api-keys
RESEND_API_KEY=re_your_resend_api_key_here

# Email sender configuration (must be verified domain)
FROM_EMAIL=invoices@your-verified-domain.com
FROM_NAME=Flying Venture System

# Support email for customer inquiries
SUPPORT_EMAIL=support@your-domain.com

# ============================================
# PAYUMONEY PAYMENT GATEWAY
# ============================================
# PayUMoney Merchant Credentials - Get from: https://www.payumoney.com
PAYUMONEY_MERCHANT_KEY=your_payumoney_merchant_key
PAYUMONEY_MERCHANT_SALT=your_payumoney_merchant_salt

# PayUMoney Base URL
# Test: https://test.payu.in/_payment
# Live: https://secure.payu.in/_payment
PAYUMONEY_BASE_URL=https://test.payu.in/_payment

# ============================================
# RAZORPAY (OPTIONAL)
# ============================================
# Razorpay credentials - Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY_ID=your_razorpay_key_id
RAZORPAY_KEY_SECRET=your_razorpay_key_secret

# ============================================
# STRIPE (OPTIONAL)
# ============================================
# Stripe credentials - Get from: https://dashboard.stripe.com/apikeys
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ============================================
# OPENAI API (OPTIONAL - For AI features)
# ============================================
# OpenAI API Key - Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your_openai_api_key_here

# ============================================
# SUBSCRIPTION & TRIAL SETTINGS
# ============================================
# Trial period in days (default: 20)
TRIAL_PERIOD_DAYS=20

# Default subscription plan for new organizations
# Options: starter | professional | enterprise
DEFAULT_SUBSCRIPTION_PLAN=starter

# Trial expiration warning days (send notification when days left)
TRIAL_WARNING_DAYS=7,3,1

# ============================================
# EMAIL NOTIFICATION SETTINGS
# ============================================
# Enable/disable monthly sales summary emails (true/false)
ENABLE_MONTHLY_SALES_SUMMARY=true

# Enable/disable monthly purchase summary emails (true/false)
ENABLE_MONTHLY_PURCHASE_SUMMARY=true

# Day of month to send monthly summaries (1-28)
MONTHLY_SUMMARY_DAY=1

# Time to send emails (24-hour format: HH:MM)
EMAIL_SEND_TIME=09:00

# ============================================
# SECURITY SETTINGS
# ============================================
# Rate limiting - Window in milliseconds (default: 15 minutes)
RATE_LIMIT_WINDOW_MS=900000

# Maximum requests per window
RATE_LIMIT_MAX_REQUESTS=100

# CORS allowed origins (comma-separated)
# For development, include localhost URLs
# For production, use your actual domain(s)
CORS_ORIGINS=http://localhost:5000,http://localhost:5173,http://localhost:3000,https://yourdomain.com

# ============================================
# FILE UPLOAD SETTINGS
# ============================================
# Maximum file size in bytes (default: 10MB)
MAX_FILE_SIZE=10485760

# Upload directory for attachments
UPLOAD_DIR=./uploads

# Allowed file types (comma-separated MIME types)
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf,application/msword,application/vnd.openxmlformats-officedocument.wordprocessingml.document

# ============================================
# PLATFORM ADMIN ACCOUNT
# ============================================
# Default admin account created on first run
# Change password immediately after first login!
ADMIN_EMAIL=hugenetwork7@gmail.com
ADMIN_PASSWORD=admin123
ADMIN_NAME=Flying Venture Admin

# ============================================
# LOGGING & MONITORING
# ============================================
# Log level: error | warn | info | debug
LOG_LEVEL=info

# Enable request logging (true/false)
ENABLE_REQUEST_LOGGING=true

# ============================================
# FEATURE FLAGS
# ============================================
# Enable/disable features
ENABLE_AI_FEATURES=false
ENABLE_RECURRING_INVOICES=true
ENABLE_CRM=true
ENABLE_ACCOUNTING=true
ENABLE_INVENTORY=true

# ============================================
# BACKUP SETTINGS (Optional)
# ============================================
# Automatic database backup enabled (true/false)
ENABLE_AUTO_BACKUP=false

# Backup frequency in hours
BACKUP_FREQUENCY_HOURS=24

# Backup retention days
BACKUP_RETENTION_DAYS=30

# ============================================
# DEPLOYMENT SETTINGS
# ============================================
# Deployment platform: docker | hostinger | vps | cloud
DEPLOYMENT_PLATFORM=docker

# Server timezone
TZ=UTC

# ============================================
# NOTES
# ============================================
# 1. Never commit .env file to version control
# 2. Generate strong secrets using: openssl rand -hex 32
# 3. Update all default passwords before deploying to production
# 4. Configure email domain and payment gateway before going live
# 5. Enable SSL/HTTPS in production
# 6. Set NODE_ENV=production for production deployments
# 7. Backup DATABASE_URL and secrets securely
